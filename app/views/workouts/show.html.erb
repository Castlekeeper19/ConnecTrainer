<div class="show-banner nav-fix" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%=@workout.photo.attached? ? cl_image_path(@workout.photo.key) : image_path("https://source.unsplash.com/1200x800/?#{@workout.category}") %>);">
  <div class="container d-flex flex-column justify-content-center">
    <h1><%= @workout.name %></h1>
    <p class="mt-2"><i><%= @workout.category %></i></p>
</div></div>



  <div class="container d-flex">
    <div class="d-flex justify-content-between mt-2">
        <div class="workout-discription m-4">

          <h2><%= @workout.name %> is...</h2>
          <p>  <%= @workout.description %>  </p>

          <div class="border p-2 center" style="box-shadow: 0 0 15px rgba(0,0,0,0.2)" id="override">
            <div class="trainer-card d-flex align-items-center">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
              <div class="trainer-avatar align-content-center ml-5">
                <h4>Trainer: <%= @workout.user.name %></h4>
                <p>  <%= @workout.user.bio %>  </p>
              </div>
            </div>
          </div>

          <%= render "shared/map", style: "width: 100%; height: 400px;", class_name: "map-show" %>
        </div>

      <div class="align-items-center bg-secondary p-4 rounded" style="box-shadow: 0 0 15px rgba(0,0,0,0.2)" id="override">
        <h2 class= "border-bottom">Book your Workout! </h2>
        <h5 style = "text-align:right">Price is Â¥<%= @workout.price %></h5>
        <%= simple_form_for @booking do |f| %>
          <%= f.input :date_time, html5: true, input_html: { min: Date.today } %>
          <%= f.input :comment %>
          <%= f.hidden_field :workout_id %>
          <%= f.button :submit, class: "btn btn-primary"  %>
        <% end %>
      </div>
    </div>
  </div>

